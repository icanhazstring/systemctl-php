{
    "name": "icanhazstring/systemctl-php",
    "description": "PHP wrapper for systemctl",
    "type": "library",
    "require": {
        "php": "^7.1",
        "symfony/process": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "SystemCtl\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SystemCtl\\Tests\\": [
                "tests/"
            ]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "icanhazstring",
            "email": "blubb0r05+github@gmail.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit tests/",
        "cs": "vendor/bin/phpcs --standard=PSR2 src/ && vendor/bin/phpcs --standard=PSR2 tests/"
    }
}
